<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/game_color_positive"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Well done!"
        android:id="@+id/tvDetails"
        android:textColor="@color/game_color_answer_indicator_text"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignTop="@+id/ivIcon"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/ivIcon"
        android:layout_toEndOf="@+id/ivIcon"
        android:layout_alignBottom="@+id/ivIcon" />

    <ImageView
        android:layout_width="116dp"
        android:layout_height="104dp"
        android:id="@+id/ivIcon"
        android:layout_below="@+id/tvTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/img_answer_indicator_positive" />

    <TextView
        android:id="@+id/tvTitle"
        android:textColor="@color/game_color_answer_indicator_text"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Correct !"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>